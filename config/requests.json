{
  "getTicketsFromRepairDesk": {
      "schema": {
          "method": "GET",
          "host": "api.repairdesk.co",
          "path": "/api/web/v1/tickets",
          "query": {
              "keyword": "<%= ticket.email %>"
          },
          "headers": {
              "Authorization": "Bearer <%= iparam.repairDeskApiKey %>",
              "Content-Type": "application/json"
          }
      },
      "options": {
          "retryDelay": 1000,
          "maxAttempts": 3
      }
  }
}
